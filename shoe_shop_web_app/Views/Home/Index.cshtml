                        <a class="img-prod">
                            <img src="~/images/product-1.png" class="img-fluid product-image" alt="Product Image">
                        </a>
                        <div class="hover-overlay">
                            <button class="btn btn-dark add-to-cart-btn">THÊM VÀO GIỎ</button>
