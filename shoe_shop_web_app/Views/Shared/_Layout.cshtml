    <style>
		.container-product-card{
			display:flex,
			flex:1
		}
        .product-card {
            position: relative;
            text-align: center;
            width: 50%;
        }

        .product-image {
            width: 100%;
            height: auto;
            transition: 0.3s;
        }

        .hover-overlay {
            position: absolute;
            top: 75%;
            left: 50%;
            transform: translate(-50%, -50%);
            display: none;
            width: 100%;
            text-align: center;
        }

        .add-to-cart-btn, .buy-now-btn {
            margin-bottom: 5px;
        }

        .product-info {
            margin-top: 10px;
        }

        .product-card:hover .product-image {
            opacity: 0.7;
        }

        .product-card:hover .hover-overlay {
            display: block;
        }
    </style>

</head>
